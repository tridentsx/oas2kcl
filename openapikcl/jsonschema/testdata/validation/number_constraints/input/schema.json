{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "NumberValidation",
  "description": "A schema for testing number validation constraints",
  "properties": {
    "integer_field": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Integer with range constraints"
    },
    "number_field": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Float between 0 and 1"
    },
    "exclusive_range": {
      "type": "number",
      "exclusiveMinimum": 0,
      "exclusiveMaximum": 10,
      "description": "Number with exclusive range"
    },
    "multiple_of": {
      "type": "integer",
      "multipleOf": 5,
      "description": "Integer that must be multiple of 5"
    },
    "enum_number": {
      "type": "number",
      "enum": [1.0, 2.0, 3.0],
      "description": "Number from enumerated values"
    }
  },
  "required": ["integer_field", "number_field"]
} 