{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pet",
  "type": "object",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the pet"
        },
        "age": {
          "type": "integer",
          "description": "The age of the pet"
        }
      },
      "required": ["name"]
    },
    {
      "type": "object",
      "properties": {
        "breed": {
          "type": "string",
          "description": "The breed of the pet"
        }
      },
      "required": ["breed"]
    }
  ],
  "description": "A pet schema that combines multiple schemas"
} 