{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Identifier",
  "type": "object",
  "anyOf": [
    {
      "properties": {
        "name": {
          "type": "string",
          "description": "The name identifier"
        }
      },
      "required": ["name"]
    },
    {
      "properties": {
        "id": {
          "type": "integer",
          "description": "The numeric identifier"
        }
      },
      "required": ["id"]
    }
  ],
  "description": "An identifier that can be either a name or an ID"
} 